<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MapsActivity">

    <fragment
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <Button
            android:text="get current Location"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:id="@+id/getLocation"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
                android:text="init code is"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            android:id="@+id/firstCode"/>
        <TextView
                android:text="altitude code is"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/secondCode"/>
        <TextView
                android:text="lat, lng :"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/locationText"/>
        <TextView
                android:text="hat :"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/heightText"/>
        <TextView
                android:text="hae :"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/haeText"/>
        <TextView
                android:text="pressure :"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/pressureText"/>
    </LinearLayout>

</LinearLayout>