<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_image" />

        <ImageButton
            android:id="@+id/write_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#00ff0000"
            android:src="@drawable/material_symbols_edit_rounded" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:layout_editor_absoluteX="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/following_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/community_oval" />

            <Button
                android:id="@+id/following_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="0.02"
                android:text="Following"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/all_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/community_oval" />

            <Button
                android:id="@+id/all_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:fontFamily="@font/roboto_medium"
                android:gravity="bottom|center_horizontal"
                android:letterSpacing="0.02"
                android:text="All"
                android:textAllCaps="false"
                android:textColor="@color/string_gray"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>



    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/hiking_btn"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/tag_btn_back"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.01"
                android:text="Hiking"
                android:textAllCaps="false"
                android:textColor="@color/string_gray"
                android:textSize="10sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/running_btn"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/tag_btn_back"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.01"
                android:text="Running"
                android:textAllCaps="false"
                android:textColor="@color/string_gray"
                android:textSize="10sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/walking_btn"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/tag_btn_back"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.01"
                android:text="Walking"
                android:textAllCaps="false"
                android:textColor="@color/string_gray"
                android:textSize="10sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/riding_btn"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@drawable/tag_btn_back"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.01"
                android:text="Riding"
                android:textAllCaps="false"
                android:textColor="@color/string_gray"
                android:textSize="10sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/stair_climbing_btn"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@drawable/tag_btn_back"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.01"
                android:text="Stair Climbing"
                android:textAllCaps="false"
                android:textColor="@color/string_gray"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/community_round_back"
        android:id="@+id/post_layout">

        <ImageView
            android:id="@+id/post_iv"
            android:layout_width="72dp"
            android:layout_height="102dp"
            android:layout_margin="9dp"
            android:background="@drawable/community_round_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/riding2"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="190dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/post_iv"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile3" />

            <TextView
                android:id="@+id/writer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Mathu"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ant_design_reload_time_outline" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="2 days ago"
                android:textColor="#7e7e7e"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:letterSpacing="0.02"
            android:text="Workout done today!"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/post_iv"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="#00ff0000"
            android:scaleType="centerInside"
            android:src="@drawable/material_symbols_arrow_back_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_list_rv"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        tools:layout_editor_absoluteX="40dp">

    </androidx.recyclerview.widget.RecyclerView>



</androidx.constraintlayout.widget.ConstraintLayout>