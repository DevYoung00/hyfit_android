    <LinearLayout
        android:id="@+id/aboveBar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/followingBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_medium"
                android:text="Following"
                android:textColor="@color/blue_point"
                android:textSize="16sp"
                android:letterSpacing="0"
                android:background="@color/white" />
            <View
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="@color/blue_point"/>


        </LinearLayout>


        <Button
            android:id="@+id/allBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="ALL"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="normal"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:background="@color/white"
            />

        <ImageButton
            android:id="@+id/myPageImageView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/community_user_gray"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboveBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_goal_rectangle"
            android:gravity="center">

            <ImageView
                android:layout_margin="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/running"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The whether is sooo fine today"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="john"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_goal_rectangle">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_goal_rectangle">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_goal_rectangle">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </LinearLayout>

    </LinearLayout>



